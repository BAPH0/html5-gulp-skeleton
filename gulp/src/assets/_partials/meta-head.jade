mixin meta-head(extend)
  - if (!extend.title) { extend.title = meta.def.title }
  - if (!extend.desc) { extend.desc = meta.def.desc }
  - if (!extend.ogimage) { extend.ogimage = meta.def.ogimage }
  - if (!extend.keywords) { extend.keywords = meta.def.keywords }
  - if (!extend.ogurl) { extend.ogurl = "" }
  head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#")

    meta(charset=charset)
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content=viewport)
    meta(name="theme-color", content=themecolor)
    meta(name="robots", content=meta.def.robots)

    title #{extend.title}
    meta(property="og:title", content=extend.title)
    meta(name="twitter:title", property="og:title", content=extend.title)
    meta(property="og:site_name", content=meta.def.ogsitename)
    meta(name="apple-mobile-web-app-title", content=meta.def.ogsitename)

    meta(name="description", content=extend.desc)
    meta(property="og:description", content=extend.desc)
    meta(name="twitter:description", property="og:description", content=extend.desc)

    link(rel="image_src", href="#{path.domain}#{extend.ogimage}")
    meta(property="og:image", content="#{path.domain}#{extend.ogimage}")
    meta(name="twitter:image" property="og:image", content="#{path.domain}#{extend.ogimage}")
    link(rel="apple-touch-icon-precomposed", href=meta.def.clipicon)

    meta(property="og:url", content="#{path.domain}#{path.root}#{extend.ogurl}")
    meta(name="twitter:url", property="og:url", content="#{path.domain}#{path.root}#{extend.ogurl}")
    link(rel="canonical", href="#{path.domain}#{path.root}#{extend.ogurl}")

    meta(name="keywords", content=extend.keywords)
    meta(property="og:type", content=meta.def.ogtype)
    meta(property="og:locale", content=meta.def.oglocale)
    meta(name="twitter:card", content="summary_large_image")
    //- meta(name="twitter:site", content="@twitterAccount")

    //- link(rel="shortcut icon", href=meta.def.favicon, type="image/vnd.microsoft.icon")
    //- link(rel="icon", href=meta.def.favicon, type="image/vnd.microsoft.icon")

